<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0">
  <info>
    <title>HBMU Nrnzn Citation Style</title>
    <id>http://www.zotero.org/styles/hbmu-custom</id>
    <link href="http://www.zotero.org/styles/hbmu-custom" rel="self"/>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2023-10-15T18:30:00+00:00</updated>
    <rights license="https://creativecommons.org/licenses/by-sa/4.0/">CC BY-SA 4.0</rights>
  </info>

  <macro name="title">
    <text variable="title"/>
  </macro>

  <!-- Fix for "et al." appearing twice -->
  <macro name="author">
    <names variable="author">
      <name delimiter=", " initialize-with=". " et-al-min="4" et-al-use-first="3" et-al-use-last="false"/>
    </names>
  </macro>

  <!-- Citations in superscript small square brackets -->
  <citation collapse="citation-number"> <!-- Groups like [25-28] -->
    <layout prefix="[" suffix="]" delimiter=", " vertical-align="sup"> 
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- Bibliography with normal brackets and normal numbers -->
  <bibliography>
    <layout>
      <text variable="citation-number" prefix="[" suffix="] "/> <!-- Normal brackets, normal number -->
      <group delimiter=". ">
        <text macro="author"/>
        <group>
          <text macro="title"/>
          <choose>
            <!-- Journal Article [J] -->
            <if type="article-journal">
              <text prefix=" [" value="J" suffix="] "/>
              <text variable="container-title"/>
              <date variable="issued" form="numeric" date-parts="year" prefix=", "/>
              <group prefix=", " delimiter="">
                <text variable="volume"/>
                <text variable="issue" prefix="(" suffix=")"/>
                <text variable="page" prefix=": "/>
              </group>
            </if>
            <!-- Book [M] -->
            <else-if type="book">
              <text value=" [M]. "/>
              <text variable="publisher-place" suffix=": "/>
              <text variable="publisher" suffix=", "/>
              <date variable="issued" form="numeric" date-parts="year"/>
              <text variable="page" prefix=": "/>
            </else-if>
            <!-- Thesis/Dissertation [D] -->
            <else-if type="thesis">
              <text value=" [D]. "/>
              <text variable="publisher-place" suffix=": "/>
              <text variable="publisher" suffix=", "/>
              <date variable="issued" form="numeric" date-parts="year"/>
              <text variable="page" prefix=": "/>
            </else-if>
          </choose>
        </group>
      </group>
    </layout>
  </bibliography>
</style>
